<div class="col-md-6 offset-md-3">
  <h1 class="text-center display-4 m-5">Log in</h1>
  <%= form_tag(sessions_path) do |form| %>
    <% if(flash.any?)  %>
      <div class="container message-container">
        <% flash.each do |name, message|  %>
          <div class="message <%= name  %> "> <%= message  %> </div>
        <% end %>
      </div>
    <% end %>
    <div class="form-group row">
      <%= label :email,'Email', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= text_field_tag(:email,nil, class: 'input-group__field', placeholder: "e.g. me@epfl.ch"  )%>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= submit_tag 'Log in', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
</div>
